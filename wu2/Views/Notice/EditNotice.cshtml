@model wu2.Models.Notices

@{
    ViewBag.Title = "編輯公告";
}

<h2>編輯公告</h2>
@if ((bool)ViewBag.HasFullPermission)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>公告</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.NoticeId)
            @Html.HiddenFor(model => model.GroupId)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, "標題")
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Content, "內容")
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
}
else
{

    <div class="alert alert-info" role="alert">
        <i class="fas fa-info-circle"></i> 只有創建者可新增。
    </div>
}