    <script>
        const timeline = document.getElementById('timeline');
        let scrollAmount = 0;
        const scrollStep = 220; // 每次滾動的距離
        const scrollInterval = 4000; // 每隔 2 秒滾動一次

        function autoScroll() {
            scrollAmount += scrollStep;
            if (scrollAmount >= timeline.scrollWidth - timeline.clientWidth) {
                scrollAmount = 0; // 滾動到末尾後回到開頭
            }
            timeline.scrollTo({
                left: scrollAmount,
                behavior: 'smooth',
            });
        }

        // 自動滾動
        setInterval(autoScroll, scrollInterval);

    </script>
