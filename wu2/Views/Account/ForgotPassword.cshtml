<div class="password-reset-container">
    <h2>忘記密碼</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    else if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.Label("信箱")
            @Html.TextBox("Email", null, new { @class = "form-control", @placeholder ="請輸入信箱" })
            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">發送連結</button>
    }
</div>


<style>
    /* 忘記密碼表單的容器樣式 */
    .password-reset-container {
        background-color: #fff; /* 白色背景 */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* 輕微陰影 */
        max-width: 400px; /* 容器最大寬度 */
        width: 100%; /* 100%寬度適應小螢幕 */
        margin: 0 auto; /* 將容器置中 */
        text-align: center; /* 內容置中 */
    }

    /* 表單的標題樣式 */
    h2 {
        color: #333;
        margin-bottom: 20px;
        font-size: 28px;
    }

    /* 表單元素樣式 */
    .form-group {
        margin-bottom: 20px;
        text-align: left; /* 標籤和輸入框靠左 */
    }

    .form-control {
        height: 45px;
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ccc;
        width: 100%;
    }

        .form-control:focus {
            border-color: #3C91E6; /* 輸入框聚焦時的邊框顏色 */
            box-shadow: 0 0 5px rgba(60, 145, 230, 0.3); /* 聚焦時的陰影效果 */
        }

    /* 按鈕樣式 */
    .btn-primary {
        background-color: #3C91E6;
        border: none;
        padding: 12px 20px;
        font-size: 16px;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%; /* 按鈕全寬 */
    }

        .btn-primary:hover {
            background-color: #2A71D0;
        }

    /* 成功和錯誤消息樣式 */
    .alert {
        margin-bottom: 20px;
        padding: 15px;
        font-size: 14px;
        border-radius: 4px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* 錯誤信息樣式 */
    .text-danger {
        color: #e74c3c;
        font-size: 14px;
        text-align: left;
    }
</style>